<p style="color: green"><%= notice %></p>

<%= link_to "Go to Parking Lot list", parking_lots_path %>
<br/>
<%= link_to "Add a Car", new_car_path %>

<h3>Cars</h3>

<%= render 'colors' %>
<%= render 'reg_no' %>

<div id="cars">
  <table>
    <tr>
      <th>Color</th>
      <th>Registration Number</th>
      <th>Ticket Number</th>
      <th>Action</th>
    </tr>
    <% @cars.each do |car| %>
      <tr>
        <td> <%= car.color %> </td>
        <td> <%= car.registration_no %> </td>
        <td> <%= car.ticket.present? ? link_to('View Ticket', parking_lot_ticket_path(car.parking_lot, car.ticket)) : '-' %> </td>
        <td><%= link_to "View Details", car %></td>
      </tr>
    <% end %>
  </table>
</div>
